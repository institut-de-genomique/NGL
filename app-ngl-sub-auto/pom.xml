	<build>
		<finalName>${project.artifactId}</finalName>

		<filters>
			<filter>${config.directory}/birds.properties</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>${config.directory}</directory>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>2.0-beta-6</version>
				<configuration>
					<outputEncoding>UTF-8</outputEncoding>
				</configuration>
			</plugin>
			<plugin>
				<inherited>false</inherited>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>properties-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>initialize</phase>
						<goals>
							<goal>read-project-properties</goal>
						</goals>
						<configuration>
							<files>
								<file>${config.directory}/birds.properties</file>
							</files>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>2</id>
						<phase>install</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>src/main/assembly/assembly.xml</descriptor>
							</descriptors>
							<archive>
								<manifestEntries>
									<Main-Class>${clientMainClass}</Main-Class>
								</manifestEntries>
							</archive>
							<finalName>${JAR_NAME}</finalName>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<inherited>false</inherited>
				<executions>
					<execution>
						<id>default-copy-resources</id>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<phase>process-resources</phase>
						<configuration>
							<outputDirectory>target/generated-resources</outputDirectory>
							<resources>
								<resource>
									<directory>${config.directory}</directory>
									<filtering>true</filtering>
								</resource>
								<resource>
									<directory>src/main/resources</directory>
									<filtering>true</filtering>
									<includes>
										<include>birds.sh</include>
										<include>*.properties</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>Deploy scripts</id>
						<phase>deploy</phase>
						<configuration>
							<tasks>
								<mkdir dir="${PROJECT_LIBRARY}" />
								<copy file="${basedir}/target/generated-resources/birds.sh"
									tofile="${PROJECT_LIBRARY}/${CLIENT_NAME}" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>Deploy main artifact</id>
						<phase>deploy</phase>
						<configuration>
							<tasks>
								<mkdir dir="${PROJECT_LIBRARY}" />
								<copy file="${basedir}/target/${JAR_NAME}.jar" todir="${PROJECT_LIBRARY}" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<!-- Suppression birdsProject.properties car connexion base de donnÃ©es 
						dans github <execution> <id>Deploy properties</id> <phase>deploy</phase> 
						<configuration> <tasks> <mkdir dir="${PROJECT_PROPERTIES_DIR}"/> <copy file="${basedir}/target/generated-resources/${PROJECT_PROPERTIES_FILE}" 
						todir="${PROJECT_PROPERTIES_DIR}"/> </tasks> </configuration> <goals> <goal>run</goal> 
						</goals> </execution> -->
				</executions>
			</plugin>

		</plugins>
